<h1>Share a New Recipe</h1>
<form method="post" action="/recipes">
  <p>
    <label for="recipe[prep_time]">Prep Time: </label> <input id="recipe[prep_time]" type="string" name="recipe[prep_time]" />  <label for="recipe[cook_time]">Cook Time: </label> <input id="recipe[cook_time]" type="string" name="recipe[cook_time]" />  <label for="recipe[servings]">Servings: </label> <input id="recipe[servings]" type="string" name="recipe[servings]" />
  </p>
  <p>
    <label for="meal_type">Meal Type: </label> <select id="meal_type" type="string" name="recipe[meal_type]">
      <option value=""></option>
      <option value="Appetizer Snack">Appetizer/Snack</option>
      <option value="Breakfast Brunch">Breakfast/Brunch</option>
      <option value="Dessert">Dessert</option>
      <option value="Dinner">Dinner</option>
      <option value="Drinks">Drink</option>
      <option value="Lunch">Lunch</option>
    </select>  <label for="dish_type">Dish Type: </label> <select id="dish_type" type="string" name="recipe[dish_type]">
        <option value=""></option>
        <option value="Bar">Bar</option>
        <option value="Bread">Bread</option>
        <option value="Cake">Cake</option>
        <option value="Cookie">Cookie</option>
        <option value="Pasta">Pasta</option>
        <option value="Pie">Pie</option>
        <option value="Salad">Salad</option>
        <option value="Sandwich">Sandwich</option>
        <option value="Soup Stew Chili">Soup/Stew/Chili</option>
        <option value="Stirfry">Stirfry</option>
      </select>  <label for="cuisine_type">Cuisine Type: </label> <select id="cuisine_type" type="string" name="recipe[cuisine_type]">
        <option value=""></option>
        <option value="Chinese">Chinese</option>
        <option value="English">English</option>
        <option value="French">French</option>
        <option value="German">German</option>
        <option value="Indian">Indian</option>
        <option value="Italian">Italian</option>
        <option value="Japanese">Japanese</option>
        <option value="Mexican">Mexican</option>
        <option value="Nordic">Nordic</option>
        <option value="Thai">Thai</option>
      </select>
  </p>
  <p>
    <label class="form-label" for="name">Name:</label>  <input id="name" type="text" name="recipe[name]" />
  </p>
  <p>
    <label for="ingredients">Ingredients</label><br />
    * Please write the ingredients in the form '[amount] of [ingredient]' and seperated by a comma or new line
    <textarea id="ingredients" name="ingredients" style="height: 150px; width: 100%; padding: 5px"></textarea>
    </p>
  <p>

  </p>
  <p>
    <label class="form-label" for="directions">Directions:</label><br /><textarea id="directions" name="directions" style="height: 300px; width: 100%; padding: 5px"></textarea><br />
  </p>
  <input class="button" type="submit" value="Share" />
</form>
